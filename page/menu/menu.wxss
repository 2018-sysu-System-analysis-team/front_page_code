/**菜单列表**/
.weui-cellset {
  margin-top: 8.1%;
  height: 1020rpx;
}
.weui-cell__right {
  display: flex;
  flex-direction: row;
}
.foodname {
  font-size: 42rpx;
  margin-left: 30rpx;
  font-family: sans-serif;
}
.fooddescription {
  font-size: 35rpx;
  color: #ede;
  margin-left: 30rpx;
  font-family:Georgia;
}
.foodprice {
  font-size: 50rpx;
  color: rgb(231, 108, 133);
  margin-right:10rpx;
}
.addbutton{
  margin-top: 20rpx;
  width: 45rpx; 
  height: 45rpx;
}
.bar {
  display: flex;
  flex-direction: row;
  position: absolute;
  bottom: 1rpx;
  width: 100%;
  background:#f4f4f5;
}
.cart {
  display: flex;
  flex-direction: row;
}

.cart-num {
  position:absolute;
  left:58rpx;
  top:0rpx;
  font-size:25rpx;
  line-height:36rpx;
  padding:0 12rpx;
  color:#fff;
  background:#f45044;
  border-radius:20rpx;
}
.totalprice{
  margin-top: 21rpx;
  color: rgb(98, 121, 167);
}
.submitbutton {
  width:33%;
  float:right;
  margin-right: 1rpx;
  font-size:37rpx;
}

.cart-detail, .cart-detail .mask {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.cart-detail .mask {
  background: rgba(0, 0, 0, 0.7);
}

.cart-detail .cart-list {
  position: absolute;
  left: 0;
  bottom: 100rpx;
  width: 100%;
  background: #f7f7f7;
  padding: 0rpx 0;
}

.cart-detail .cart-list .item {
  display: -webkit-flex;
  color: #333;
  font-size: 28rpx;
  line-height: 50rpx;
  padding: 6rpx 40rpx;
}

.cart-detail .cart-list .item .name {
  -webkit-flex: 1;
}

.cart-detail .cart-list .item .total {
  width: 120rpx;
}

.minus-btn, .add-btn {
  /*position: absolute;*/
